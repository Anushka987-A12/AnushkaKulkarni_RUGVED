def butterfly(num):
    spaces=2*num-1
    stars=0
    for i in range(2*n):
        if i<num:
            spaces=spaces-2
            stars+=1
        else:
            spaces=spaces+2
            stars-=1
        for j in range(stars):
            print("*",end="")


        for j in range(spaces):
            print(" ",end="")


        for j in range(1,stars+1):
            if j!=n:
                print("*",end="")
        print("\n")


n=int(input("enter n: "))
butterfly(n)
