import cv2 as cv
cap=cv.VideoCapture(r"C:\Users\anush\OneDrive\Documents\GitHub\AnushkaKulkarni_RUGVED\Ball_Tracking.mp4")
obj_detector=cv.createBackgroundSubtractorMOG2()
while True:
    ret,frame=cap.read()
    if ret:
          cv.imshow("frame",frame)
          mask=obj_detector.apply(frame)
          contours , _ = cv.findContours(mask,cv.RETR_TREE,cv.CHAIN_APPROX_SIMPLE)
          for cnt in contours:
              area=cv.contourArea(cnt)
              if 100 < area:
                  cv.drawContours(frame,[cnt],-1,(0,255,0),2)
          cv.imshow('mask',mask)
          key=cv.waitKey(30)
          if key == 27:
             break
    else:
        break
cap.release()
cv.destroyAllWindows()