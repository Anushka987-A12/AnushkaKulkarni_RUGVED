def diamond(rows):
    for i in range(rows):
        print(" "*(rows-1-i),end="")
        for j in range(0,i+1):
            print("* ",end="")
        print("\n")
    for i in range(rows-1):
        print(" "*(i+1),end="")
        for j in range(0,(rows-1-i)):
            print("* ",end="")
        print("\n")
r=int(input("enter n : "))
diamond(r)
